<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.google.ar.core.examples.java.helloar.HelloArActivity">

  <android.opengl.GLSurfaceView
      android:id="@+id/surfaceview"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:layout_gravity="top" />

  <TextView
      android:id="@+id/Pose"
      android:background="#80FFFFFF"
      android:layout_width="250dp"
      android:layout_height="40dp"
      android:layout_marginStart="0dp"
      android:layout_marginTop="0dp"
      android:text="Pose"
      android:textAppearance="@style/TextAppearance.AppCompat.Small"
      android:textColor="#4E0202"
      android:textStyle="bold"
      android:visibility="visible"
      tools:visibility="visible" />

  <TextView
      android:id="@+id/SamplingRate"
      android:background="#80FFFFFF"
      android:layout_width="250dp"
      android:layout_height="35dp"
      android:layout_marginStart="0dp"
      android:layout_marginTop="40dp"
      android:textColor="#4E0202"
      android:textStyle="bold"
      android:text="SamplingRate" />

  <TextView
      android:id="@+id/Time"
      android:background="#80FFFFFF"
      android:layout_width="250dp"
      android:layout_height="35dp"
      android:layout_marginStart="0dp"
      android:layout_marginTop="75dp"
      android:textColor="#4E0202"
      android:textStyle="bold"
      android:text="Time" />

  <TextView
      android:id="@+id/FeaturesNumb"
      android:background="#80FFFFFF"
      android:layout_width="250dp"
      android:layout_height="35dp"
      android:layout_marginStart="0dp"
      android:layout_marginTop="110dp"
      android:textColor="#4E0202"
      android:textStyle="bold"
      android:text="FeaturesNumb" />

  <TextView
      android:id="@+id/TrackingState"
      android:background="#80FFFFFF"
      android:layout_width="250dp"
      android:layout_height="35dp"
      android:layout_marginStart="0dp"
      android:layout_marginTop="145dp"
      android:text="TrackingState"
      android:textStyle="bold"
      android:textColor="#4E0202" />

  <TextView
      android:id="@+id/Accelerometer"
      android:layout_width="250dp"
      android:layout_height="167dp"
      android:layout_marginStart="0dp"
      android:layout_marginTop="180dp"
      android:background="#80FFFFFF"
      android:text="Accelerometer"
      android:textColor="#4E0202"
      android:textStyle="bold" />

  <Button
      android:id="@+id/StartRecording"
      android:layout_width="150dp"
      android:layout_height="40dp"
      android:layout_marginStart="110dp"
      android:layout_marginTop="350dp"
      android:background="@drawable/custom_button"
      android:textSize="15sp"
      android:onClick="StartRecordingButtonClick"
      android:text="StartRecording" />

  <Button
      android:id="@+id/SaveIMUVIO"
      android:layout_width="150dp"
      android:layout_height="40dp"
      android:layout_marginStart="110dp"
      android:layout_marginTop="395dp"
      android:onClick="SaveIMUVIOButtonClick"
      android:textSize="15sp"
      android:background="@drawable/custom_button"
      android:text="SaveIMUVIO" />

  <Button
      android:id="@+id/Restart"
      android:layout_width="150dp"
      android:layout_height="40dp"
      android:layout_marginStart="110dp"
      android:layout_marginTop="440dp"
      android:onClick="RestartAppOnClick"
      android:textSize="15sp"
      android:background="@drawable/custom_button"
      android:text="Restart" />

  <EditText
      android:id="@+id/VIOARFileName"
      android:layout_width="150dp"
      android:layout_height="45dp"
      android:layout_marginStart="250dp"
      android:layout_marginTop="0dp"
      android:ems="10"
      android:hint="VIOARFileName"
      android:cursorVisible="true"
      android:focusable="true"
      android:focusableInTouchMode="true"
      android:inputType="textPersonName"
      android:text=""
      android:textSize="15dp" />

  <EditText
      android:id="@+id/IMUFileName"
      android:layout_width="150dp"
      android:layout_height="45dp"
      android:layout_marginStart="250dp"
      android:layout_marginTop="45dp"
      android:ems="10"
      android:hint="IMUFileName"
      android:cursorVisible="true"
      android:focusable="true"
      android:focusableInTouchMode="true"
      android:inputType="textPersonName"
      android:text=""
      android:textSize="15dp" />

  <CheckBox
      android:id="@+id/ShowInfo"
      android:layout_width="150dp"
      android:layout_height="40dp"
      android:layout_marginStart="0dp"
      android:layout_marginTop="350dp"
      android:checked="true"
      android:onClick="onCheckBoxClicked"
      android:text="ShowInfo" />


</RelativeLayout>